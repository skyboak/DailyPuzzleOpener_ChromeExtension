{
  "manifest_version": 3,
  "name": "My Daily Puzzle Opener",
  "version": "1.0",
  "description": "Opens your favorite daily puzzles with a click or on a new day",
  "permissions": [
    "storage"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "options_page": "options.html"
}
